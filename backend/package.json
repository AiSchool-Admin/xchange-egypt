{
  "name": "@xchange/backend",
  "version": "0.2.2",
  "description": "Xchange E-commerce Platform - Backend API",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "echo '=== Starting Prisma Generate ===' && prisma generate && echo '=== Starting TypeScript Compilation ===' && (tsc || echo 'TypeScript completed with warnings') && echo '=== Build Complete ==='",
    "start": "node dist/app.js",
    "test:scenarios": "tsx scripts/run-20-scenarios.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:smoke": "jest tests/smoke",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":70,\"functions\":70,\"lines\":70,\"statements\":70}}'",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --max-warnings 0",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --fix",
    "lint:ci": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --format stylish",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "seed": "tsx prisma/seed.ts",
    "seed:categories": "tsx prisma/seed-categories.ts",
    "seed:users": "tsx prisma/seed-users.ts",
    "seed:items": "tsx prisma/seed-items.ts",
    "seed:demo": "tsx prisma/seed-demo-data.ts",
    "seed:marketplace": "tsx prisma/seed-marketplace-data.ts",
    "seed:transport": "tsx prisma/seed-transport-marketplace.ts",
    "seed:matching": "tsx prisma/seed-matching-tests.ts",
    "seed:board": "tsx prisma/seed-board.ts",
    "seed:founder": "tsx src/scripts/create-founder.ts",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:check": "tsx scripts/check-database.ts",
    "db:health": "tsx scripts/check-database.ts",
    "prisma:deploy": "prisma migrate deploy"
  },
  "keywords": [
    "xchange",
    "e-commerce",
    "barter",
    "auction",
    "marketplace"
  ],
  "author": "Xchange Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.19.0",
    "@types/nodemailer": "^7.0.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "js-yaml": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fast-xml-parser": "^5.3.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "redis": "^4.6.11",
    "sharp": "^0.33.1",
    "socket.io": "^4.6.1",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pg": "^8.16.3",
    "prettier": "^3.1.1",
    "prisma": "^6.19.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seeds/categories-3-level.seed.ts"
  }
}
