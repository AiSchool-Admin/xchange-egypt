# Test Environment Variables
# Copy this file to .env.test for running tests

# Database
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/xchange_test"

# JWT Secrets (use different secrets for testing)
JWT_SECRET="test-jwt-secret-do-not-use-in-production"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-do-not-use-in-production"

# Redis (optional for tests)
REDIS_URL="redis://localhost:6379"

# Test Environment
NODE_ENV="test"

# Cloudflare R2 / S3 (mock in tests)
R2_ACCOUNT_ID="test-account-id"
R2_ACCESS_KEY_ID="test-access-key"
R2_SECRET_ACCESS_KEY="test-secret-key"
R2_BUCKET_NAME="test-bucket"
R2_PUBLIC_URL="https://test.r2.dev"

# Disable external services in tests
DISABLE_REDIS="true"
DISABLE_CRON_JOBS="true"
DISABLE_WEBSOCKETS="true"
