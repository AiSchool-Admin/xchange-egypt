enum EscrowStatus {
  CREATED         // تم إنشاؤه
  FUNDED          // تم تمويله
  PENDING_DELIVERY // في انتظار التسليم
  DELIVERED       // تم التسليم
  INSPECTION      // فترة الفحص
  RELEASED        // تم تحريره
  DISPUTED        // نزاع
  REFUNDED        // مسترد
  CANCELLED       // ملغي
  EXPIRED         // منتهي الصلاحية
}

enum EscrowType {
  SALE            // بيع
  BARTER          // مقايضة
  BARTER_CHAIN    // سلسلة مقايضة
  SERVICE         // خدمة
}

model Escrow {
  id              String        @id @default(uuid())

