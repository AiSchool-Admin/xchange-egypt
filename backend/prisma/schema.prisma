enum DisputeStatus {
  OPEN            // مفتوح
  UNDER_REVIEW    // قيد المراجعة
  AWAITING_RESPONSE // في انتظار الرد
  MEDIATION       // وساطة
  ESCALATED       // مرفوع للإدارة
  RESOLVED        // محلول
  CLOSED          // مغلق
