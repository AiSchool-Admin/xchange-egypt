  IMAGE           // Image message
  FILE            // File attachment
  ITEM            // Shared item/product
  OFFER           // Offer/deal
  SYSTEM          // System message (e.g., "User joined")
}

enum MessageStatus {
  SENT            // Message sent
  DELIVERED       // Message delivered to recipient
  READ            // Message read by recipient
  FAILED          // Message failed to send
