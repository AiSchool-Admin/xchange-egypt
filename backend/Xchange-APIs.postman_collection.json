              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@test.com\",\n  \"password\": \"Test123!\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"+201234567890\",\n  \"userType\": \"INDIVIDUAL\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/v1/auth/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set(\"ACCESS_TOKEN\", response.data.accessToken);",
                  "    console.log(\"✅ Access token saved!\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Test123!\"\n}"
            },
            "url": {
