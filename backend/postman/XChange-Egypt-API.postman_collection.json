              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test{{$randomInt}}@example.com\",\n  \"password\": \"Test123!@#\",\n  \"fullName\": \"مستخدم تجريبي\",\n  \"phone\": \"0101234{{$randomInt}}\",\n  \"userType\": \"INDIVIDUAL\",\n  \"governorate\": \"Cairo\"\n}"
            }
