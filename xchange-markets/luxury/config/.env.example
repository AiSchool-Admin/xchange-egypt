# Xchange Luxury - Environment Configuration
# انسخ هذا الملف إلى .env.local واملأ القيم

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/xchange_luxury"
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"
JWT_EXPIRES_IN="1h"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-min-32-characters"
REFRESH_TOKEN_EXPIRES_IN="30d"

# OTP Settings
OTP_EXPIRES_IN_SECONDS=120
OTP_MAX_ATTEMPTS_PER_HOUR=5

# ============================================
# SMS PROVIDER
# ============================================
# Choose one: vodafone, twilio, vonage

# Vodafone Egypt
VODAFONE_USERNAME=""
VODAFONE_PASSWORD=""
VODAFONE_SENDER_ID=""

# OR Twilio
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# OR Vonage
VONAGE_API_KEY=""
VONAGE_API_SECRET=""
VONAGE_SENDER_ID=""

# ============================================
# PAYMENT - PAYMOB
# ============================================
PAYMOB_API_KEY=""
PAYMOB_IFRAME_ID=""
PAYMOB_INTEGRATION_ID=""
PAYMOB_HMAC_SECRET=""
PAYMOB_WALLET_INTEGRATION_ID=""
PAYMOB_KIOSK_INTEGRATION_ID=""

# Webhook URL (set in Paymob dashboard)
# https://api.xchange.com.eg/webhooks/paymob

# ============================================
# FILE STORAGE
# ============================================
# Choose one: s3, cloudinary, local

# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-1"
AWS_S3_BUCKET="xchange-luxury"
AWS_CLOUDFRONT_URL=""

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Local (development only)
UPLOAD_DIR="./uploads"
UPLOAD_MAX_SIZE_MB=10

# ============================================
# AUTHENTICATION SERVICE - ENTRUPY
# ============================================
ENTRUPY_API_KEY=""
ENTRUPY_API_URL="https://api.entrupy.com/v1"
ENTRUPY_WEBHOOK_SECRET=""

# ============================================
# SHIPPING PROVIDERS
# ============================================
# Bosta
BOSTA_API_KEY=""
BOSTA_BUSINESS_ID=""
BOSTA_WEBHOOK_SECRET=""

# Aramex
ARAMEX_USERNAME=""
ARAMEX_PASSWORD=""
ARAMEX_ACCOUNT_NUMBER=""
ARAMEX_ACCOUNT_PIN=""
ARAMEX_ACCOUNT_ENTITY=""
ARAMEX_ACCOUNT_COUNTRY=""

# ============================================
# PUSH NOTIFICATIONS - FIREBASE
# ============================================
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_DATABASE_URL=""

# ============================================
# EMAIL (Optional)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@xchange.com.eg"
SMTP_FROM_NAME="Xchange Luxury"

# OR SendGrid
SENDGRID_API_KEY=""

# ============================================
# SEARCH - ELASTICSEARCH (Optional)
# ============================================
ELASTICSEARCH_NODE="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""
ELASTICSEARCH_INDEX_PREFIX="xchange_luxury"

# ============================================
# EXTERNAL APIS
# ============================================
# Chrono24 Price API (if available)
CHRONO24_API_KEY=""

# Google Places (for location)
GOOGLE_PLACES_API_KEY=""

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
PORT=3001
API_VERSION="v1"

# Frontend URLs
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3002"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3002"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PRO_MAX_REQUESTS=500

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Sentry (error tracking)
SENTRY_DSN=""

# ============================================
# FEATURES FLAGS
# ============================================
FEATURE_TRADE_ENABLED=true
FEATURE_AUCTION_ENABLED=false
FEATURE_AI_PRICING_ENABLED=true
FEATURE_ENTRUPY_ENABLED=false

# ============================================
# PLATFORM SETTINGS
# ============================================
# Commission rates (percentage)
PLATFORM_FEE_SELLER=12
PLATFORM_FEE_BUYER=3
PLATFORM_FEE_TRADE=8
PLATFORM_FEE_AUCTION_SELLER=15
PLATFORM_FEE_AUCTION_BUYER=5

# Inspection period (days)
INSPECTION_PERIOD_DAYS=14

# Product listing duration (days)
LISTING_DURATION_DAYS=30

# ============================================
# NEXT.JS PUBLIC VARIABLES
# (prefix with NEXT_PUBLIC_ for client access)
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:3001/v1"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Xchange Luxury"
NEXT_PUBLIC_SUPPORT_EMAIL="support@xchange.com.eg"
NEXT_PUBLIC_SUPPORT_PHONE="+201000000000"

# Google Analytics
NEXT_PUBLIC_GA_ID=""

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=""

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Mock external services
MOCK_SMS=true
MOCK_PAYMENT=true
MOCK_ENTRUPY=true
MOCK_SHIPPING=true

# Seed data
AUTO_SEED=true
