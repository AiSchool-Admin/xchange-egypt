# ==========================================
# Xchange Scrap Marketplace - Environment Variables
# ==========================================

# ==========================================
# APPLICATION
# ==========================================
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ==========================================
# DATABASE
# ==========================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/xchange_scrap?schema=public"

# ==========================================
# REDIS
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=30d

# ==========================================
# OTP / SMS
# ==========================================
# Twilio (International)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Vodafone SMS Gateway (Egypt)
VODAFONE_SMS_USERNAME=your_username
VODAFONE_SMS_PASSWORD=your_password
VODAFONE_SMS_SENDER=XCHANGE

# OTP Settings
OTP_LENGTH=6
OTP_EXPIRY_SECONDS=300

# ==========================================
# PAYMENT GATEWAYS
# ==========================================
# Paymob
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_integration_id
PAYMOB_IFRAME_ID=your_iframe_id
PAYMOB_HMAC_SECRET=your_hmac_secret

# Fawry
FAWRY_MERCHANT_CODE=your_merchant_code
FAWRY_SECURITY_KEY=your_security_key
FAWRY_BASE_URL=https://atfawry.fawrystaging.com

# ==========================================
# EXTERNAL APIS
# ==========================================
# LME (London Metal Exchange) - for metal prices
LME_API_KEY=your_lme_api_key
LME_API_URL=https://api.lme.com/v1

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_API_URL=https://api.exchangerate.host

# ==========================================
# GOOGLE SERVICES
# ==========================================
# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ==========================================
# FILE STORAGE
# ==========================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=xchange-scrap-uploads

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================
# LOGGING & MONITORING
# ==========================================
# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id

# Log Level
LOG_LEVEL=debug

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CRON JOBS
# ==========================================
# Price Update Schedule (cron expression)
PRICE_UPDATE_CRON="0 * * * *"

# ==========================================
# BUSINESS SETTINGS
# ==========================================
# Platform fees (percentages)
PLATFORM_FEE_C2B=0.15
PLATFORM_FEE_C2C_SELLER=0.03
PLATFORM_FEE_C2C_BUYER=0.02
PLATFORM_FEE_B2B=0.02

# Minimum order values
MIN_ORDER_VALUE_EGP=50
MIN_WEIGHT_KG=1

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_B2B=false
ENABLE_AUCTIONS=false
ENABLE_ESG_CERTIFICATES=false
ENABLE_LIVE_TRACKING=true

# ==========================================
# ADMIN
# ==========================================
ADMIN_EMAIL=admin@xchange.com.eg
ADMIN_PHONE=+201000000000
