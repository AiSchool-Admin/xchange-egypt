# This is an example environment file
# Copy this to .env and fill in the actual values

# Database
DATABASE_URL="postgresql://xchange_user:dev123@localhost:5432/xchange"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_REFRESH_SECRET="your-refresh-token-secret-key-also-32-chars"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Storage - Cloudflare R2 (S3 Compatible)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="xchange-media"
R2_PUBLIC_URL="https://media.xchange.eg"

# App Configuration
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Email (SendGrid - Free Tier)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@xchange.eg"

# SMS (Optional - Twilio/Vodafone)
TWILIO_ACCOUNT_SID="your-twilio-sid"
TWILIO_AUTH_TOKEN="your-twilio-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Payment Gateways (Egypt)
# Fawry
FAWRY_MERCHANT_CODE="your-fawry-merchant-code"
FAWRY_SECURITY_KEY="your-fawry-security-key"

# Paymob
PAYMOB_API_KEY="your-paymob-api-key"
PAYMOB_INTEGRATION_ID="your-integration-id"

# Maps (Optional)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=5
MAX_FILES_PER_UPLOAD=10
